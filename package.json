{
  "name": "local-x402-facilitator",
  "version": "0.1.4",
  "description": "An x402 facilitator server for local development that works natively with Tenderly Virtual TestNets. Avoiding bottlenecks while testing and creating sandbox environments for x402 development.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "local-x402-facilitator": "dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "postbuild": "chmod +x dist/bin/cli.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "cli": "node dist/bin/cli.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/x40ai/local-x402-facilitator"
  },
  "homepage": "https://github.com/miljan-tekic/local-x402-facilitator",
  "keywords": [
    "x402",
    "facilitator",
    "local",
    "tenderly",
    "testnet",
    "server",
    "local-development"
  ],
  "author": "Miljan Tekic <miljan.tekic@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/express": "^5.0.3",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "dotenv": "^16.0.0",
    "express": "^5.1.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "viem": "^2.35.1",
    "x402": "^0.5.3"
  }
}
